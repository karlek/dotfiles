[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold

[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold

[core]
	editor = /usr/bin/nvim
	pager = delta

[push]
	default = simple

[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

	root = !pwd

[interactive]
	diffFilter = delta --color-only

[add.interactive]
	useBuiltin = false # required for git 2.37.0

[delta]
	navigate = true    # use n and N to move between diff sections
	light = false
	side-by-side = true
	line-numbers = true
	syntax-theme = Monokai Extended

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default
